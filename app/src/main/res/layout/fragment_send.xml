<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/background_image"
        android:src="@drawable/homepage"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:height="38dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.36"
        style="@style/LandingTitle"
        android:width="230dp"
        android:textStyle="bold"
        android:text="Send"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message"/>

    <TextView
        android:id="@+id/message"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/LandingMessage"
        android:width="330dp"
        android:text="blablabla"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_money"/>

    <Button
        android:id="@+id/send_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/top_up"
        android:text="send_money"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:background="@drawable/primary_button"/>

    <Button
        android:id="@+id/top_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="air_time_top_up"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:background="@drawable/transparent_button_effect"/>
</android.support.constraint.ConstraintLayout>